.section-footer {
  @extend ._main-section-dark

  & {
    padding: 1rem 0;
  }

  & > * {
    text-align: center;
    margin: 2rem 0;
  }

  & .links {
    display: flex;
    justify-content: center;
  }

  & .links > li {
    margin: 0 0.5rem;
  }

  & .links > li > .square-link {
    font-size: 1.2rem;
    height: 2.5rem;
    width: 2.5rem;
  }

  & .copyright {
    font-size: 0.8rem;
  }

  & .copyright > * {
    vertical-align: middle;
  }
}
