.section-showcase-item {
  item-columns($columns = 0) {
    width: 300px unless $columns > 0;
    width: s("calc((100% / %s) - 20px)", $columns) if $columns > 0;
    padding-top: @width;
  }

  & {
    margin: 10px;
    box-shadow: $emphasis_shadow;
    position: relative;
    item-columns();
    +media-laptop() {
      item-columns(3);
    }
    +media-tablet() {
      item-columns(2);
    }
    +media-mobile() {
      item-columns(1);
    }
  }

  > .button {
    display: block;
    text-decoration: none;
    color: $dark;
    width: 100%;
    height: 100%;
    text-align: center;
    position: absolute;
    top: 0;
    left: 0;

    > .title {
      position: absolute;
      top: 50%;
      left: 0;
      transform: translateY(-50%);
      padding: 1rem;
      width: 100%;
    }

    > .thumbnail {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-position: left center;
      background-repeat: no-repeat;
      background-size: contain;
      opacity: 1;
      transition: 0.4s ease;
    }

    +hover() {
      > .thumbnail { opacity: 0.1; }
    }
  }
}
