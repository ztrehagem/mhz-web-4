.section-showcase-item {
  & {
    margin: 10px;
    width: calc((768px - 20px * 4) / 3);
    height: calc((768px - 20px * 4) / 3);
    box-shadow: $emphasis_shadow;
  }

  > .button {
    display: block;
    text-decoration: none;
    color: $dark;
    position: relative;
    width: 100%;
    height: 100%;
    text-align: center;
  }

  > .button > .title {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    padding: 1rem;
    width: 100%;
  }

  > .button > .thumbnail {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    opacity: 1;
    transition: 0.4s ease;
  }

  > .button:hover > .thumbnail {
    opacity: 0.1;
  }
}
