body {
  margin: 0;
  padding: 0;
  background-color: $dark;
  color: white;
  font-family: Meiryo, 'Hiragino Kaku Gothic ProN', sans-serif;

  &.locked {
    position: absolute;
    overflow: hidden;
  }
}

* {
  box-sizing: border-box;
}

section, footer {
  &.-dark {
    background-color: $dark;
    color: white;
  }
  &.-light {
    background-color: white;
    color: rgba(60, 60, 60, 1);
  }
}
